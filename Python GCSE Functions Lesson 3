        "import math\n",
        "def areas(base, height):\n",
        "  which_area = input(\"Which area would you like to find out? Triangle, rectangle or circle?: \")\n",
        "  if which_area == \"triangle\":\n",
        "   area = (base*height)/2\n",
        "   print(f\"The area of the triangle is {area}\")\n",
        "  if which_area == \"rectangle\":\n",
        "   area = (base*height)\n",
        "   print(f\"The area of the rectangle is {area}\")\n",
        "  if which_area == \"circle\":\n",
        "   pi = math.pi\n",
        "   area = pi * ((base/2)*(base/2))\n",
        "   print(f\"The area of the circle is {area}\")\n",
        "areas(int(input(\"Enter a base length: \")), int(input(\"Enter a height: \")))"
